    <nav class="navbar navbar-expand-lg navbar-fixed-top">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Basefugees</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Home" asp-action="MyClaims" class="nav-link">My Claims</a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Search" asp-action="Index" class="nav-link">Search</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Algolia" asp-action="Index" class="nav-link">Algolia</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Project" asp-action="Index" class="nav-link">Projects</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Account" asp-action="Logout" class="nav-link">Logout</a>
                    </li>
                }
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Account" asp-action="Login" class="nav-link">Log In</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Account" asp-action="Signin" class="nav-link">Sign In</a>
                    </li>
                }
